@model ControleMesalidadeCTTAPlayGround.Models.AssociadoModel

@{
    ViewData["Title"] = "Detalhes do Sócio";
}

<h2>Pagamentos realizados por @Model.Nome</h2>
@* <p><strong>Status:</strong> @(Model.EstaAdimplente() ? "Adimplente" : "Inadimplente")</p> *@
<p>
    <strong>Status:</strong>
    <span style="color:@(Model.EstaAdimplente() ? "blue" : "red")">
        @(Model.EstaAdimplente() ? "Adimplente" : "Inadimplente")
    </span>
</p>
<p><strong>Vencimento Atual:</strong> @Model.ObterVencimentoAtual()?.ToString("dd/MM/yyyy")</p>
<p><strong>Dias Restantes:</strong> @Model.DiasRestantes()</p>

<h4>Histórico de Pagamentos</h4>
<table class="table">
    <thead>
        <tr>
            <th>Data do Pagamento</th>
            <th>Valor</th>
            <th>Dias Restantes</th>
            <th>Data do Vencimento</th>
        </tr>
    </thead>
    <tbody>
        @{
            DateTime? vencimento = null;
            foreach (var p in Model.Pagamentos.OrderBy(p => p.DataPagamento))
            {
                var calculado = p.CalcularVencimento(vencimento);
                vencimento = calculado;
                <tr>
                    <td>@p.DataPagamento.ToString("dd/MM/yyyy")</td>
                    <td>R$ @p.Valor.ToString("F2")</td>
                    <td>@p.DiasAdimplencia dias</td>
                    <td>@calculado.ToString("dd/MM/yyyy")</td>
                </tr>
            }
        }
    </tbody>
</table>
<a asp-action="Index" class="btn btn-secondary">Voltar</a>














