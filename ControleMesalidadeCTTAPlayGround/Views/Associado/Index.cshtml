@model IEnumerable<ControleMesalidadeCTTAPlayGround.Models.AssociadoModel>

@{
    ViewData["Title"] = "Lista de Sócios";
    var ass = ViewBag.associadoPgto as PagamentoModel;
}

<h2>Lista de Sócios</h2>
<p>
    <a href="@Url.Action("Create", "Associado")" class="btn btn-primary">Novo Sócio</a>
</p>

@if (TempData["Msg"] != null)
{
    <p style="color:green;">@TempData["Msg"]</p>
}



<table class="table table-striped table-sm">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Documento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Endereco)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataAniversario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categoria)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Equipamento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Necessidade)
            </th>
            <th>
               Vencimento
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Documento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telefone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Endereco)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataAniversario)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Categoria)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Equipamento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Necessidade)
                </td>
                <td>
                    @item.ObterVencimentoAtual()?.ToString("dd/MM/yyyy")
                </td>
                
                <td>
                    <a asp-controller="Pagamento" asp-action="Pagamento" asp-route-id="@item.Id" class="btn btn-outline-primary">Novo Pagamento</a>
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
